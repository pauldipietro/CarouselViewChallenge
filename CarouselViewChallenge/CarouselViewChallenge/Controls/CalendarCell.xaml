             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="CarouselViewChallenge.Controls.CalendarCell">
    
  <ContentView.Content>
        <Grid x:Name="background" BackgroundColor="White" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Padding="0" Margin="0,1">
                <Label x:Name="date"
                       FontSize="Micro"
                       HorizontalOptions="End"
                       VerticalOptions="Start"
                       Margin="10"
                       TextColor="Gray" />
        </Grid>
    </ContentView.Content>
</ContentView>