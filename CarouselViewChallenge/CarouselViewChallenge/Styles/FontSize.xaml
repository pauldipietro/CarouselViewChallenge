<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="CarouselViewChallenge.Styles.FontSize">
     <!-- FONT SIZES -->
    <x:Double x:Key="FontSize10">10</x:Double>
    <x:Double x:Key="FontSize12">12</x:Double>
    <x:Double x:Key="FontSize13">13</x:Double>
    <x:Double x:Key="FontSize14">14</x:Double>
    <x:Double x:Key="FontSize16">16</x:Double>
    <x:Double x:Key="FontSize18">18</x:Double>
    <x:Double x:Key="FontSize20">20</x:Double>
    <x:Double x:Key="FontSize24">24</x:Double>
    <x:Double x:Key="FontSize26">26</x:Double>
    <x:Double x:Key="FontSize28">28</x:Double>
    <x:Double x:Key="FontSize36">36</x:Double>
    <!-- FONTS -->
    <OnPlatform x:Key="RobotoSlabBold" x:TypeArguments="x:String" iOS="RobotoSlab-Bold" Android="RobotoSlab-Bold.ttf#Roboto" />
    <OnPlatform x:Key="RobotoSlabLight" x:TypeArguments="x:String" iOS="RobotoSlab-Light" Android="RobotoSlab-Light.ttf#Roboto" />
    <OnPlatform x:Key="RobotoSlabRegular" x:TypeArguments="x:String" iOS="RobotoSlab-Regular" Android="RobotoSlab-Regular.ttf#Roboto" />
    <OnPlatform x:Key="RobotoSlabThin" x:TypeArguments="x:String" iOS="RobotoSlab-Thin" Android="RobotoSlab-Thin.ttf#Roboto" />
</ResourceDictionary>
