<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CarouselViewChallenge.Views.CarouselViewChallengePage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <ContentPage.Content>
        <CarouselView ItemsSource="{Binding Cards}" PeekAreaInsets="30">
            <CarouselView.ItemTemplate>
                <DataTemplate>
                    <StackLayout BackgroundColor="#cfd8dc">
                        <Frame
                            Margin="8,60,8,-10"
                            Padding="0"
                            BorderColor="Transparent"
                            CornerRadius="10"
                            HasShadow="False"
                            HeightRequest="800"
                            IsClippedToBounds="True"
                            VerticalOptions="CenterAndExpand">
                            <StackLayout Spacing="0">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="50" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="50" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="100" />
                                    </Grid.ColumnDefinitions>

                                    <Image
                                        Grid.Row="0"
                                        Grid.RowSpan="3"
                                        Grid.ColumnSpan="2"
                                        Aspect="AspectFill"
                                        HorizontalOptions="Fill"
                                        Source="{Binding CardImage}" />
                                    <StackLayout Margin="10,0">
                                        <Label
                                            Margin="0,10,0,-10"
                                            Text="Available"
                                            TextColor="White" />
                                        <Label
                                            FontAttributes="Bold"
                                            FontSize="Large"
                                            Text="$100.00"
                                            TextColor="White" />
                                    </StackLayout>
                                    <Label
                                        Grid.Row="2"
                                        Margin="10,0,0,0"
                                        Text="✔ Last updated: 3 hours ago"
                                        TextColor="White"
                                        VerticalOptions="Center" />
                                    <Label
                                        Grid.Row="2"
                                        Grid.Column="1"
                                        Margin="10,0"
                                        FontAttributes="Bold"
                                        FontSize="30"
                                        HorizontalOptions="End"
                                        Text="⚙"
                                        TextColor="White" />
                                </Grid>


                                <!--  Card Details  -->
                                <StackLayout BackgroundColor="#F5F4F5" Spacing="0">
                                    <Label
                                        Margin="15,15,0,0"
                                        FontAttributes="Bold"
                                        FontSize="18"
                                        Text="{Binding Title}"
                                        TextColor="Black" />
                                    <Label
                                        Margin="15,0,0,0"
                                        FontSize="Medium"
                                        Text="{Binding Summary}" />
                                    <StackLayout
                                        Margin="5,10"
                                        BindableLayout.ItemsSource="{Binding Details}"
                                        Spacing="5">
                                        <BindableLayout.ItemTemplate>
                                            <DataTemplate>
                                                <Grid RowSpacing="0">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>
                                                    <!--<Image
                                                        Grid.Row="0"
                                                        Grid.RowSpan="2"
                                                        Grid.Column="0"
                                                        Margin="10,0"
                                                        Source="{Binding Icon}" />-->
                                                    <Label
                                                        Grid.Row="0"
                                                        Grid.RowSpan="2"
                                                        Margin="10"
                                                        FontSize="25"
                                                        HorizontalOptions="Center"
                                                        Text="{Binding Icon}"
                                                        VerticalOptions="Center" />
                                                    <Label
                                                        Grid.Row="0"
                                                        Grid.Column="1"
                                                        FontSize="16"
                                                        Text="{Binding DetailTitle}"
                                                        VerticalOptions="Center" />
                                                    <Label
                                                        Grid.Row="1"
                                                        Grid.Column="1"
                                                        FontAttributes="Bold"
                                                        FontSize="20"
                                                        Text="{Binding DetailFact}"
                                                        TextColor="Black" />
                                                </Grid>
                                            </DataTemplate>
                                        </BindableLayout.ItemTemplate>

                                    </StackLayout>

                                </StackLayout>

                                <!--  Transaction  -->
                                <StackLayout>
                                    <BoxView
                                        BackgroundColor="Gray"
                                        HeightRequest="1"
                                        HorizontalOptions="Fill" />
                                    <StackLayout Orientation="Horizontal" Spacing="0">
                                        <Image Margin="20,0,10,0" Source="tab_about.png" />
                                        <Label
                                            Margin="0,8"
                                            FontAttributes="Bold"
                                            FontSize="18"
                                            Text="Transactions"
                                            TextColor="Black" />
                                    </StackLayout>

                                    <BoxView
                                        BackgroundColor="Gray"
                                        HeightRequest="1"
                                        HorizontalOptions="Fill" />
                                </StackLayout>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="35" />
                                        <RowDefinition Height="30" />

                                    </Grid.RowDefinitions>
                                    <Label
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        Margin="20,0"
                                        FontSize="16"
                                        Text="Opening balance:"
                                        VerticalOptions="Center" />
                                    <Label
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        Margin="20,0"
                                        FontSize="16"
                                        HorizontalOptions="End"
                                        Text="$50"
                                        VerticalOptions="Center" />

                                    <BoxView
                                        Grid.Row="1"
                                        Grid.ColumnSpan="2"
                                        Color="#F5F4F5" />
                                    <Label
                                        Grid.Row="1"
                                        Grid.Column="0"
                                        Margin="20,0"
                                        FontSize="16"
                                        Text="22 Jun. 2019"
                                        VerticalOptions="Center" />
                                    <Label
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        Margin="20,0"
                                        FontSize="16"
                                        HorizontalOptions="End"
                                        Text="3 months ago"
                                        VerticalOptions="Center" />
                                </Grid>
                            </StackLayout>
                        </Frame>
                    </StackLayout>
                </DataTemplate>
            </CarouselView.ItemTemplate>
        </CarouselView>
    </ContentPage.Content>
</ContentPage>